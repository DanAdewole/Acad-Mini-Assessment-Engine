# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For PostgreSQL (Production/Staging):
# DATABASE_URL=postgresql://username:password@host:port/database_name
# For SQLite (Local Development - leave commented or remove):
# DATABASE_URL=

# Example PostgreSQL URLs:
# Render: postgresql://user:pass@dpg-xxxxx.oregon-postgres.render.com/dbname

# Grading Service Configuration
# Options: 'mock' (TF-IDF, free), 'ai' (OpenAI), 'gemini' (Google)
GRADING_SERVICE=mock

# OpenAI Configuration (only needed if GRADING_SERVICE=ai)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# OPENAI_MODEL=gpt-4o-mini
# Available models: gpt-4o-mini (cheapest), gpt-4o, gpt-4-turbo, gpt-3.5-turbo

# Google Gemini Configuration (only needed if GRADING_SERVICE=gemini)
# Get your API key from: https://aistudio.google.com/app/apikey
# GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# GEMINI_MODEL=gemini-1.5-flash
# Available models: gemini-1.5-flash (fastest, cheapest), gemini-1.5-pro, gemini-pro